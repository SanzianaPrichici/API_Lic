<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant_Client.TableAssign">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Introduceti numarul de persoane pentru a va alege cea mai buna masa"/>
            <Entry x:Name="nrPers" Keyboard="Numeric" />
            <Button Text="Cauta masa" Clicked="CautaMese"/>
            <ListView x:Name="listaMese" BackgroundColor="Beige" ItemSelected="OnTableSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding ID}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>