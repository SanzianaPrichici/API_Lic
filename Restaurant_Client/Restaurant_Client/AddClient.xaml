<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant_Client.AddClient">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Inregistrati-va!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtnume" Placeholder="Nume"/>
            <Entry x:Name="txtprenume" Placeholder="Prenume"/>
            <Entry x:Name="txttlf" Placeholder="Telefon"/>
            <Label Text="Data Nasterii" />
            <DatePicker x:Name="txtdat" />
            <Entry x:Name="txtadr" Placeholder="Adresa"/>
            <Button Text="Salveaza" Clicked="OnButtonSave"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>