<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant_Client.AddUser">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Inregistrati-va!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtmail" Placeholder="Mail" BindingContext="Mail"/>
            <Entry x:Name="txtusr" Placeholder="User" BindingContext="Username"/>
            <Entry x:Name="txtparola" Placeholder="Parola" BindingContext="Parola"/>
            <Button Text="Salveaza" Clicked="OnButtonSave"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>