<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Restaurant_Client.Login">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtusername" Placeholder="Username" />
            <Entry x:Name="txtpassword" Placeholder="Parola" IsPassword="True" />
            <Button Text="Login!" Clicked="OnLoginClicked" />
            <Button Text="Intregistrare" Clicked="OnInregClicked" BackgroundColor="Transparent"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>